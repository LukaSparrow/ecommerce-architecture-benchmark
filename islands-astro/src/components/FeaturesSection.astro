---
import { Truck, Shield, Headphones, Zap } from 'lucide-react';

const features = [
  {
    icon: Truck,
    title: "Free Shipping",
    description: "Free delivery on orders over $50",
  },
  {
    icon: Shield,
    title: "Secure Payment",
    description: "100% secure payment processing",
  },
  {
    icon: Headphones,
    title: "24/7 Support",
    description: "Round-the-clock customer service",
  },
  {
    icon: Zap,
    title: "Fast Delivery",
    description: "Same-day delivery available",
  },
];
---

<!-- Updated background to match SPA/SSR (bg-white instead of bg-background) -->
<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-4xl font-bold mb-4">
        Why Choose ShopBench?
      </h2>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        We provide the best shopping experience with premium quality and exceptional service
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {features.map((feature) => (
        <!-- Updated to use Card component styling like SPA/SSR -->
        <div class="text-center p-6 bg-card rounded-lg border hover:shadow-lg transition-shadow">
          <div class="space-y-4">
            <div class="w-16 h-16 mx-auto bg-blue-100 rounded-full flex items-center justify-center">
              <!-- Changed class to className for React component -->
              <feature.icon className="h-8 w-8 text-blue-600" />
            </div>
            <h3 class="text-xl font-semibold">{feature.title}</h3>
            <p class="text-muted-foreground">{feature.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
