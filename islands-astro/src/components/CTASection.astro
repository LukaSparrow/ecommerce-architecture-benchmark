---
import { ArrowRight } from "lucide-react";
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4 text-center">
    <div class="max-w-3xl mx-auto space-y-8">
      <h2 class="text-3xl lg:text-4xl font-bold">Ready to Start Shopping?</h2>
      <!-- Updated to use semantic color token instead of hardcoded gray -->
      <p class="text-xl text-muted-foreground">
        Join thousands of satisfied customers and discover amazing products at
        unbeatable prices.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <!-- Updated button styling to use semantic tokens like SPA/SSR -->
        <a
          href="/products"
          class="inline-flex items-center justify-center px-8 py-3 text-lg font-medium text-primary-foreground bg-primary rounded-md hover:bg-primary/90 transition-colors"
        >
          Browse Products
          <!-- Changed class to className for React component -->
          <ArrowRight className="ml-2 h-5 w-5" />
        </a>
        <button
          class="inline-flex items-center justify-center px-8 py-3 text-lg font-medium border border-input bg-transparent rounded-md hover:bg-accent hover:text-accent-foreground transition-colors"
        >
          Contact Us
        </button>
      </div>
    </div>
  </div>
</section>
