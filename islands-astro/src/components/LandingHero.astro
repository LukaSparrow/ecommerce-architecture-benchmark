---
import { ArrowRight, Star } from "lucide-react";
---

<section
  class="relative overflow-hidden bg-gradient-to-br from-blue-50 via-white to-purple-50"
>
  <div class="container mx-auto px-4 py-20 lg:py-32">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="space-y-8">
        <div class="space-y-4">
          <!-- Updated badge styling to match SPA/SSR -->
          <span
            class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-700 hover:bg-blue-200"
          >
            ðŸŽ‰ New Collection Available
          </span>
          <h1 class="text-4xl lg:text-6xl font-bold leading-tight">
            Discover Amazing
            <span
              class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent"
            >
              {" "}Products
            </span>
          </h1>
          <p class="text-xl text-muted-foreground max-w-lg">
            Shop the latest trends with unbeatable prices and lightning-fast
            delivery. Your perfect shopping experience starts here.
          </p>
        </div>

        <div class="flex flex-col sm:flex-row gap-4">
          <!-- Updated button styling to match Button component from SPA/SSR -->
          <a
            href="/products"
            class="inline-flex items-center justify-center px-8 py-3 text-lg font-medium text-primary-foreground bg-primary rounded-md hover:bg-primary/90 transition-colors"
          >
            Shop Now
            <ArrowRight className="ml-2 h-5 w-5" />
          </a>
          <button
            class="inline-flex items-center justify-center px-8 py-3 text-lg font-medium border border-input bg-transparent rounded-md hover:bg-accent hover:text-accent-foreground transition-colors"
          >
            Learn More
          </button>
        </div>

        <div class="flex items-center gap-6 pt-4">
          <div class="flex items-center gap-1">
            {
              Array.from({ length: 5 }).map(() => (
                <Star className="h-5 w-5 fill-yellow-400 text-yellow-400" />
              ))
            }
          </div>
          <div class="text-sm text-muted-foreground">
            <span class="font-semibold text-foreground">4.9/5</span> from 2,500+
            reviews
          </div>
        </div>
      </div>

      <div class="relative">
        <div class="relative z-10">
          <img
            src="https://images.unsplash.com/photo-1560472354-b33ff0c44a43?w=500&h=500&fit=crop&crop=center"
            alt="Featured Products"
            class="w-full h-auto rounded-2xl shadow-2xl"
          />
        </div>
        <div
          class="absolute inset-0 bg-gradient-to-tr from-blue-400/20 to-purple-400/20 rounded-2xl blur-3xl"
        >
        </div>
      </div>
    </div>
  </div>
</section>
